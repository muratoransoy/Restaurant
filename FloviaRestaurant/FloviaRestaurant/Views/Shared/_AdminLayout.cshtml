<!DOCTYPE html>
<html lang="en">
@{
    FloviaRestaurant.Models.Entity.DataContext db = new FloviaRestaurant.Models.Entity.DataContext();
    FloviaRestaurant.Models.User user = db.User.FirstOrDefault(x => x.UserName == User.Identity.Name);
}
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Flovia Restaurant</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Content/assets/img/favicon.png" rel="icon">
    <link href="~/Content/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet">

    <!-- =======================================================
    * Template Name: NiceAdmin - v2.4.1
    * Template URL: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="~/AdminHome/Index" class="logo d-flex align-items-center">
                <img src="~/Content/assets/img/Flavio.png" alt="">
                <span class="d-none d-lg-block">Flovia Restaurant</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->


        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="~/Content/assets/img/Flavio.png" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@User.Identity.Name</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@User.Identity.Name</h6>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="~/AdminHome/Index">
                                <i class="bi bi-person"></i>
                                <span>My Profile</span>
                            </a>
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="~/AdminHome/Logout">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Sign Out</span>
                            </a>
                        </li>
                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">
            @if (User.Identity.IsAuthenticated)
            {
                if (user.RoleId == 1)
                {
                    <li class="nav-item">
                        <a class="nav-link " href="~/AdminUser/Index">
                            <i class="ri-map-pin-user-line"></i>
                            <span>User</span>
                        </a>
                    </li><!-- End User Nav -->

                    <li class="nav-item">
                        <a class="nav-link " href="~/Role/Index">
                            <i class="ri-user-star-line"></i>
                            <span>Role</span>
                        </a>
                    </li><!-- End Roles Nav -->
                    <li class="nav-item">
                        <a class="nav-link " href="~/AdminFoodItem/Index">
                            <i class="ri-store-line"></i>
                            <span>FoodItem</span>
                        </a>
                    </li><!-- End FoodItem Nav -->


                    <li class="nav-item">
                        <a class="nav-link " href="~/AdminMenu/Index">
                            <i class="ri-menu-2-fill"></i>
                            <span>Menu</span>
                        </a>
                    </li><!-- End Menu Nav -->
                    <li class="nav-item">
                        <a class="nav-link " href="~/AdminOrder/Index">
                            <i class="ri-shopping-basket-2-line"></i>
                            <span>Order</span>
                        </a>
                    </li><!-- End Order Nav -->
                }
                if (user.RoleId == 2)
                {
                    <li class="nav-item">
                        <a class="nav-link " href="~/AdminFoodItem/Index">
                            <i class="ri-store-line"></i>
                            <span>FoodItem</span>
                        </a>
                    </li><!-- End FoodItem Nav -->


                    <li class="nav-item">
                        <a class="nav-link " href="~/AdminMenu/Index">
                            <i class="ri-menu-2-fill"></i>
                            <span>Menu</span>
                        </a>
                    </li><!-- End Menu Nav -->
                    <li class="nav-item">
                        <a class="nav-link " href="~/AdminOrder/Index">
                            <i class="ri-shopping-basket-2-line"></i>
                            <span>Order</span>
                        </a>
                    </li><!-- End Order Nav -->
                }
                if (user.RoleId == 3)
                {
                   
                    <li class="nav-item">
                        <a class="nav-link " href="~/AdminMenu/Index">
                            <i class="ri-menu-2-fill"></i>
                            <span>Menu</span>
                        </a>
                    </li><!-- End Menu Nav -->
                    <li class="nav-item">
                        <a class="nav-link " href="~/AdminOrder/Index">
                            <i class="ri-shopping-basket-2-line"></i>
                            <span>Order</span>
                        </a>
                    </li><!-- End Order Nav -->
                }

            }
        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">



        <section class="section dashboard">
            <div class="row">

                <!-- Left side columns -->
                <div class="col-lg-8">
                    <div class="row">



                    </div>
                </div><!-- End Left side columns -->
                <!-- Right side columns -->
                <div class="col-lg-4">



                </div><!-- End Right side columns -->

            </div>
        </section>
        @RenderBody()
    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>FloviaRestaurant</span></strong>. All Rights Reserved
        </div>

    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Content/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/Content/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/Content/assets/vendor/quill/quill.min.js"></script>
    <script src="~/Content/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/Content/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/Content/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/assets/js/main.js"></script>

</body>

</html>