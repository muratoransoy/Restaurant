
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Delete Menu</h5>

        <!-- General Form Elements -->
        <form method="post">
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                    <input type="text" id="Price" name="Price"  disabled="true" class="form-control" value="@Model.Menu.Price" >
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Start Date</label>
                <div class="col-sm-10">
                    <input type="date" id="StartDate" name="StartDate"  disabled="true" class="form-control" value="@Model.Menu.StartDate">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">End Date</label>
                <div class="col-sm-10">
                    <input type="date" id="EndDate" name="EndDate"  disabled="true" class="form-control" value="@Model.Menu.EndDate">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Select Food</label>
                <div class="col-sm-10">
                    <select id="FoodItemId" name="FoodItemId"   disabled="true" class="form-select" aria-label="Default select example">

                        @foreach (var rol in Model.foodItems)
                        {
                            <option value="@rol.Id">@rol.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row-mb-3">
                <label for="IsActive" class="col-sm-2 col-form-label">Is Active</label>
                <input type="checkbox" id="IsActive"  disabled="true" name="IsActive" class="form-check-input"
                       value="true" data-val="true" checked="@Model.Menu.IsActive">
            </div>
            <p class="text-blue">@ViewBag.mesaj</p>
            <input type="hidden" name="Id" id="Id" value="@Model.Menu.Id" />

            <div class="row mb-3">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Delete</button>
                </div>
            </div>

        </form><!-- End General Form Elements -->

    </div>
</div>

