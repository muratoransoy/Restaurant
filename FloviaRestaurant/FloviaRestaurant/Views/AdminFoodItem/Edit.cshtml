@model FloviaRestaurant.Models.FoodItem
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Edit FoodItem</h5>

        <!-- General Form Elements -->
        <form method="post">
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Quantity</label>
                <div class="col-sm-10">
                    <input type="text" id="Quantity" name="Quantity" class="form-control" value="@Model.Quantity">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">UnitPrice</label>
                <div class="col-sm-10">
                    <input type="text" id="UnitPrice" name="UnitPrice" class="form-control" value="@Model.UnitPrice">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">ItemCategory</label>
                <div class="col-sm-10">
                    <input type="text" id="ItemCategory" name="ItemCategory" class="form-control" value="@Model.ItemCategory">
                </div>
            </div>
            <div class="mb-3">
                <label for="IsActive" class="col-sm-2 col-form-label">Is Active</label>
                <input type="checkbox" id="IsActive" name="IsActive" class="form-check-input"
                       value="true" data-val="true" checked="@Model.IsActive">
            </div>
            <p class="text-blue">@ViewBag.mesaj</p>
            <input type="hidden" value="@Model.Id" name="Id" id="Id" />
            <div class="row mb-3">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </div>

        </form><!-- End General Form Elements -->

    </div>
</div>

